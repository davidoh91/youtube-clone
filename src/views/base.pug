// on other templates, extend this base template file
html(lang="ko")
    head
        // the pageTitle parameter is received from Controllers
        title #{pageTitle} | Youtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/videos/upload") Upload Video
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search 
                    li 
                        a(href="/join") Join 
        main
            //insert a block (a window to place contents after extending base.pug)
            block content
    //simply import footer.pug from partials directory
    include partials/footer.pug